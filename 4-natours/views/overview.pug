extends base

block content
  main.main 
    .card-container
      //- each tour in tours
      //-   each review in tour.reviews
      //-     //- p.card__text=`${user.name}XXXXXX`
      //-     //- p.card__text=`${review.user.name}XXXXXX`
      //-     if (user.name === review.user.name)
      //-       +reviewCard(review)

      each tour in tours
        if tour.reviews
          each review in tour.reviews
            //- p.card__text=`${user.name}XXXXXX`
            //- p.card__text=`${review.user.name}XXXXXX`
            if (user.name === review.user.name)
              //- +reviewCard(review)
              .card
                .card__header
                  .card__picture
                    .card__picture-overlay &nbsp;
                    img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                  h3.heading-tertirary
                    //- check from MongoDB Compass "tours"
                    span= tour.name

                .card__details
                  h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
                  //- +reviewCard(review)
                  p.card__text= tour.summary
                  .card__data
                    svg.card__icon
                      use(xlink:href='/img/icons.svg#icon-map-pin')
                    span= tour.startLocation.description
                  .card__data
                    svg.card__icon
                      use(xlink:href='/img/icons.svg#icon-calendar')
                    span= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
                  .card__data
                    svg.card__icon
                      use(xlink:href='/img/icons.svg#icon-flag')
                    span= `${tour.locations.length} stops`
                  .card__data
                    svg.card__icon
                      use(xlink:href='/img/icons.svg#icon-user')
                    span= `${tour.maxGroupSize} people`

                .card__footer
                  p
                    span.card__footer-value= `$${tour.price}`
                    | 
                    //- |(empty space) this is a empty space
                    span.card__footer-text per person
                  p.card__ratings
                    span.card__footer-value= tour.ratingsAverage
                    | 
                    span.card__footer-text= `rating (${tour.ratingsQuantity})`
                  a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Edit review

                .card__details
                  h4.card__sub-heading=`Your Review`
                  div.reviews__avatar.card__text
                    img.reviews__avatar-img(src=`/img/users/${review.user.photo}`, alt=`${review.user.name}`)
                    h6.reviews__user= review.user.name
                  p.card__text= review.review
                  //- div.card__text
                  //-   form.form.form-review-update
                  //-     .form__group
                  //-       label.form__label(for='review') Review
                  //-       textarea#review.form__input(type='review' rows='5')= review.review
                  //-     .form__group
                  //-       label.form__label(for='rating') Rating
                  //-       input#rating.form__input(type='review', value=`${review.rating}`)
                  .reviews__rating
                    each start in [1, 2, 3, 4, 5]
                      svg.reviews__star(class=`reviews__star--${review.rating >= start ? 'active': 'inactive'}`)
                        use(xlink:href='/img/icons.svg#icon-star')

                .card__footer
                  a.btn.btn--green.btn--small.btn-review-delete(href=`/api/v1/reviews/${review.id}`) Delete review
        else
          .card
            .card__header
              .card__picture
                .card__picture-overlay &nbsp;
                img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
              h3.heading-tertirary
                //- check from MongoDB Compass "tours"
                span= tour.name

            .card__details
              h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
              p.card__text= tour.summary
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-map-pin')
                span= tour.startLocation.description
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-calendar')
                span= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-flag')
                span= `${tour.locations.length} stops`
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-user')
                span= `${tour.maxGroupSize} people`

            .card__footer
              p
                span.card__footer-value= `$${tour.price}`
                | 
                //- |(empty space) this is a empty space
                span.card__footer-text per person
              p.card__ratings
                span.card__footer-value= tour.ratingsAverage
                | 
                span.card__footer-text= `rating (${tour.ratingsQuantity})`
              a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Details
